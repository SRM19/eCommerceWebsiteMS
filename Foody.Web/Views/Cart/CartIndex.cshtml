@model CartDto
@if(Model.CartHeader!=null && Model.CartHeader.OrderTotal>0){
    <form method="post">
        <br />
        <input asp-for="CartHeader.UserId" hidden/>
        <input asp-for="CartHeader.CartHeaderId" hidden/>
        <div class="">
            <div class="card border mt-4 container">
                <div class="card-header bg-dark text-light ml-0 row ">
                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Shopping Cart
                    </div>
                    <div class="col-6 text-end">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-warning btn-sm">Continue Shopping</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class=" d-none d-lg-block">
                        <div class="row text-info">
                            <div class="col-lg-2">
                            </div>
                            <div class="col-lg-5">
                                Product Details
                            </div>
                            <div class="col-lg-2">
                                Price
                            </div>
                            <div class="col-lg-2">
                                Count
                            </div>
                            <div class="col-lg-1">
                            </div>
                        </div>
                    </div>

                    <hr />

                    @foreach(var item in Model.CartDetails){
                        <div class="row h-100">
                            <div class="col-4 col-md-2 text-center py-2">
                                <img src="https://via.placeholder.com/150" class="rounded" width="100%" />
                            </div>
                            <div class="col-8 col-md-5">
                                <h5>@item.Product.Name</h5>
                                <div style="font-size:11px;">@Html.Raw(item.Product.Description)</div>
                            </div>
                            <div class="col-3 col-md-2 pt-md-4" style="font-size:11px;">
                                <span style="font-size:17px;"> @string.Format("{0:c}",item.Product.Price)</span>
                            </div>
                            <div class="col-3 col-md-2 pt-md-4" style="font-size:11px;">
                                <span style="font-size:17px;"> @item.Count</span>
                            </div>
                            <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                <a asp-action="RemoveItem" asp-route-cartDetailId="@item.CartDetailsId" class="btn btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                        <hr />
                    }

                    
                    
                    <div class="row">
                        <div class="col-6">
                            <span>Coupon:</span>
                            @if(string.IsNullOrEmpty(Model.CartHeader.CouponCode)){
                                <input asp-for="CartHeader.CouponCode"/>
                                <button asp-action="ApplyCoupon" type="submit" class="btn-success"> Apply </button>
                            }else{
                                <input asp-for="CartHeader.CouponCode" disabled/>
                                <button asp-action="RemoveCoupon" type="submit" class="btn-danger"> Remove </button>
                                if(Model.CartHeader.DiscountTotal<=0){
                                    <span class="text-danger"> Invalid Coupon!</span>
                                }
                                
                            }
                            
                            
                        </div>
                        <div class="col-6 text-end">
                            <span class="text-danger" style="font-size:21px;">  Order Total : @string.Format("{0:c}",Model.CartHeader.OrderTotal) <br /></span>
                            @if(Model.CartHeader.DiscountTotal>0){
                                <span class="text-success">  Order Discount : @string.Format("{0:c}",Model.CartHeader.DiscountTotal) <br /></span>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer row">
                    <div class="col-6 col-md-3 offset-md-6">
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Checkout" class="btn btn-success form-control ">
                            <span>Checkout</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else{
    <div><h2>Shopping Cart is Empty!</h2></div>
}


